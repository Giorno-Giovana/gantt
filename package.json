{
    "name": "frappe-gantt",
    "version": "1.0.4",
    "description": "A simple, modern, interactive gantt library for the web",
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "dev": "vite build --watch",
        "build": "vite build",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "lint": "eslint src/**/*.ts",
        "prettier": "prettier --write \"{src/*,tests/*,vite.config}.ts\"",
        "prettier-check": "prettier --check \"{src/*,tests/*,vite.config}.ts\"",
        "type-check": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/frappe/gantt.git"
    },
    "files": [
        "src",
        "dist",
        "README.md"
    ],
    "exports": {
        ".": {
            "require": "./dist/frappe-gantt.umd.js",
            "import": "./dist/frappe-gantt.es.js",
            "style": "./dist/frappe-gantt.css"
        }
    },
    "keywords": [
        "gantt",
        "svg",
        "simple gantt",
        "project timeline",
        "interactive gantt",
        "project management"
    ],
    "author": "Faris Ansari",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/frappe/gantt/issues"
    },
    "homepage": "https://github.com/frappe/gantt",
    "devDependencies": {
        "@types/bun": "^1.3.2",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "happy-dom": "^15.11.8",
        "postcss-nesting": "^12.1.2",
        "prettier": "3.2.5",
        "typescript": "^5.9.3",
        "vite": "^5.2.10"
    },
    "eslintIgnore": [
        "dist"
    ],
    "sideEffects": [
        "*.css"
    ]
}
